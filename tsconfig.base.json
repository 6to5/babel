{
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "target": "ESNext",
    "module": "preserve",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dts",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "incremental": true
  }
}
